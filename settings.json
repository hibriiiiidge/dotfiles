{
    "editor.fontFamily": "Source Code Pro for Powerline",
    "editor.rulers": [
        72,
        80
    ],
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "boundary",
    "editor.fontSize": 14,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.tokenColorCustomizations": {
        "comments": {
            "fontStyle": "bold"
        },
        "strings": {
            "fontStyle": "bold"
        }
    },
    "editor.formatOnSave": true,
    "editor.suggestSelection": "first",
    "workbench.colorTheme": "Nord",
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "newUntitledFile",
    "git.autofetch": true,
    "git.confirmSync": false,
    "window.title": "${activeEditorMedium}${separator}${rootPath}",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.insertFinalNewline": true,
    "files.autoSave": "onFocusChange",
    "files.trimFinalNewlines": true,
    "debug.showInStatusBar": "never",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "python.linting.flake8Enabled": true,
    "python.linting.enabled": true,
    "python.condaPath": "~/.miniconda/bin/conda",
    "python.testing.pytestEnabled": true,
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length=80"
    ],
    "python.linting.mypyEnabled": true,
    "autoDocstring.docstringFormat": "google",
    "bracketPairColorizer.consecutivePairColors": [
        "()",
        "[]",
        "{}",
        [
            "#eceff4",
            "#d08770",
            "#b48ead"
        ],
        "#bf616a"
    ],
    "vetur.format.defaultFormatter.js": "prettier-eslint",
    "python.languageServer": "Microsoft",
    "terminal.integrated.fontSize": 14,
    "files.associations": {
        // "*.rmd": "markdown"
        "*.rmd": "rmd"
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "r.bracketedPaste": true,
    "r.sessionWatcher": true,
    "r.rterm.mac": "/Users/yamasaki/.pyenv/shims/radian",
    "r.rpath.mac": "/usr/local/bin/R",
    "r.rterm.option": [
        "--no-save",
        "--no-restore",
        "--r-binary=/usr/local/bin/R"
    ],
    "r.rmarkdown.codeLensCommands": [
        "r.runCurrentChunk",
        "r.runAboveChunks",
    ],
    "r.rmarkdown.enableCodeLens": true,
    "aws.profile": "profile:default",
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "csharp.suppressDotnetInstallWarning": true,
}
